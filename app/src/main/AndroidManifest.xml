<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.asbjorjo.splittimer" >

    <application
        android:name=".SplitTimerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="org.asbjorjo.splittimer.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.EventActivity"
            android:label="@string/event_title"
            android:parentActivityName="org.asbjorjo.splittimer.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.TimingActivity"
            android:label="@string/timing_title"
            android:parentActivityName="org.asbjorjo.splittimer.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.StartlistActivity"
            android:label="@string/startlist_title"
            android:parentActivityName="org.asbjorjo.splittimer.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.TimingpointActivity"
            android:label="@string/timingpoint_title"
            android:parentActivityName="org.asbjorjo.splittimer.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>
</manifest>